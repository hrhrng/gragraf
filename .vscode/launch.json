    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Debug Uvicorn (no reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
              "src.gragraf.server:app",
              "--host", "127.0.0.1",
              "--port", "8000",
              "--log-level", "debug"
            ],
            "jinja": true,
            "env": {
              "PYTHONPATH": "${workspaceFolder}"
            }
          }
    ]
}